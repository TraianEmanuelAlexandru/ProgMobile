<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home_admin">

    <fragment
        android:id="@+id/fragment_scheda_esercizi"
        android:name="com.example.mygym.ui.schedaEsercizi.SchedaEserciziFragment"
        android:label="@string/nav_menu_admintitle_scheda"
        tools:layout="@layout/fragment_scheda_esercizi" />

    <fragment
        android:id="@+id/fragment_calendario"
        android:name="com.example.mygym.ui.calendario.CalendarioFragment"
        android:label="@string/nav_menu_calendario_corsi"
        tools:layout="@layout/fragment_calendario" />

    <fragment
        android:id="@+id/navigation_home_admin"
        android:name="com.example.mygym.ui.home.HomeAdminFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home_admin">
        <action
            android:id="@+id/action_navigation_home_admin_to_signupFragment"
            app:destination="@id/signupFragment"
            app:popUpTo="@id/navigation_home_admin"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.mygym.ui.signup.SignupFragment"
        android:label="SignupFragment" />
    <fragment
        android:id="@+id/qrCodeScannerFragment"
        android:name="com.example.mygym.ui.signup.QrCodeScannerFragment"
        android:label="QrCodeScannerFragment" />


</navigation>